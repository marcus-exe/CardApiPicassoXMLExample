<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--include is a way to reuse an activity layout-->
    <include
        android:id="@+id/card_view_layout_1"
        layout="@layout/activity_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/card_view_layout_2"
        layout="@layout/activity_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="@id/card_view_layout_1"
        app:layout_constraintStart_toStartOf="@id/card_view_layout_1"
        app:layout_constraintTop_toBottomOf="@id/card_view_layout_1" />

    <include
        android:id="@+id/card_view_layout_3"
        layout="@layout/activity_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="@id/card_view_layout_2"
        app:layout_constraintStart_toStartOf="@id/card_view_layout_2"
        app:layout_constraintTop_toBottomOf="@id/card_view_layout_2" />


</androidx.constraintlayout.widget.ConstraintLayout>